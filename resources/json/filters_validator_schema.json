{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Filtros",
    "type": "object",
    "properties": {
        "filters": {
            "type": "array",
            "items": {
                "type": "object",
                "anyOf": [
                    {
                        "properties": {
                            "year": {
                                "type": "integer"
                            }
                        }
                    },
                    {
                        "properties": {
                            "city": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "properties": {
                            "state": {
                                "type": "string"
                            }
                        }
                    }
                ]
            }
        }
    },
    "required": [
        "filters"
    ]
}